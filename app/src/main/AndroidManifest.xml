<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.milosz.medbase">

    <application
        android:name=".CreateChannels"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Alerts.TimePickerDialog"></activity>
        <activity android:name=".Alerts.PickDateActivity" />
        <activity android:name=".NotesView.NoteEditorActivity" />
        <activity
            android:name=".ScanActivity"
            android:label="@string/title_activity_scan" />
        <activity android:name=".BrowseMedsActivity" />
        <activity android:name=".Alerts.AlertsActivity" />
        <activity
            android:name=".MedsActivity"
            android:label="@string/title_activity_meds"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NotesView.NotesActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".CalendarView.CalendarActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".Alerts.NotificationReceiver" />
    </application>

</manifest>